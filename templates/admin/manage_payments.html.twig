{% extends 'base.html.twig' %}

{% block title %}Gestion des paiements{% endblock %}

{% block body %}
    <h1>Gestion des paiements</h1>

    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Freelance</th>
            <th>Projet</th>
            <th>Montant</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.freelancer.name }}</td>
                <td>{{ payment.project.title }}</td>
                <td>{{ payment.amount }}</td>
                <td>{{ payment.status }}</td>
                <td>
                    {% if payment.status == 'pending' %}
                        <a href="{{ path('admin_approve_payment', { id: payment.id }) }}">Approuver</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_dashboard') }}">Retour au tableau de bord</a>
{% endblock %}
