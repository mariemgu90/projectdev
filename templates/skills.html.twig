{% extends 'base.html.twig' %}

{% block title %}Skills List{% endblock %}

{% block body %}
    <h1>Skills List</h1>

    {% if skills is not empty %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Skill Name</th>
                <th>Added By</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for skill in skills %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ skill.skillName }}</td>
                    <td>{{ skill.user.email }}</td>
                    <td>
                        <a href="{{ path('app_skill_edit', { id: skill.id }) }}" class="btn btn-warning btn-sm">Edit</a>
                        <form action="{{ path('app_skill_delete', { id: skill.id }) }}" method="post" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this skill?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ skill.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No skills found.</p>
    {% endif %}

    <a href="{{ path('app_skill_add') }}" class="btn btn-success mt-3">Add New Skill</a>
{% endblock %}
